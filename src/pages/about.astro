---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout>
  <div class="flex gap-12 max-w-5xl mx-auto">
    <article class="prose prose-invert prose-slate flex-1">
      <h1>about</h1>
      <p>
        Short bio. What you enjoy building, a sentence on your values, and what you're exploring now.
      </p>

      <h2>experience</h2>
      <ul>
        <li><strong>Production Engineer Fellow @ Meta</strong> — 2025 · one-liner impact</li>
        <li><strong>Research @ UW Systems Lab</strong> — 2025–present · one-liner impact</li>
      </ul>

      <h2>elsewhere</h2>
      <p>
        <a href="mailto:peichi1@uw.edu">Email</a> ·
        <a href="https://github.com/perryz0">GitHub</a> ·
        <a href="https://www.linkedin.com/in/peichi1">LinkedIn</a>
      </p>
    </article>
    
    <div class="flex-shrink-0 hidden md:block">
      <img 
        src="/img/wild.jpg" 
        alt="Perry Chien" 
        class="w-64 h-80 object-cover rounded-lg border-2 border-cyan/20 shadow-aura portrait-enter portrait-hover"
      />
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const portrait = document.querySelector('.portrait-enter');
      if (portrait) {
        const randomDelay = Math.floor(Math.random() * (1000 - 400 + 1)) + 400;
        setTimeout(() => portrait.classList.add('loaded'), randomDelay);
      }
    });
  </script>
</BaseLayout>
