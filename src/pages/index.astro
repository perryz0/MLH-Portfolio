---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout>
  <section class="flex items-center justify-between gap-8 max-w-4xl mx-auto">
    <div class="text-left flex-1">
      <h1 class="text-4xl md:text-6xl font-semibold tracking-wide" style="font-family: var(--font-serif);">
        I'm <span class="text-cyan/90">Perry</span>.
      </h1>
      <p class="mt-4 text-slate/90 max-w-2xl">
        Systems. Full-time funemployed. ^^
      </p>
      <div class="mt-8 inline-flex gap-4">
        <a class="px-4 py-2 rounded-xl border border-cyan/40 hover:border-cyan shadow-aura" href="/about">About me</a>
        <a class="px-4 py-2 rounded-xl hover:underline underline-offset-4" href="/thoughts">Thoughts</a>
      </div>
    </div>
    <div class="flex-shrink-0">
      <img 
        src="/img/wild.jpg" 
        alt="Perry Chien" 
        class="w-32 h-32 md:w-40 md:h-40 rounded-full object-cover border-2 border-cyan/20 shadow-aura"
      />
    </div>
  </section>
</BaseLayout>
